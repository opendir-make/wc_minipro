.news-detail-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  padding: 10px;
  padding-bottom: 5px;
}

.author-info {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.head-img {
  width: 100%;
  vertical-align: middle;
  border-radius: 5rpx;
}

.author-icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.author-name {
  margin-left: 20rpx;
}

.const-text {
  margin-left: 20rpx;
  vertical-align: middle;
  color: #cccbcb;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.author-date {
  vertical-align: middle;
  color: #cccbcb;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.title {
  margin-left: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 10rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tools{
  margin-top: 10rpx;
}

.horizon {
  height: 1px;
  background-color: #4b556c;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
  margin-top: 20rpx;
}

.articleText {
  color: #666;
  margin-top: 20rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 30rpx;
}
